@using Ictshop.Models;
@model List<Sanpham>

@{ ViewBag.Title = "Danh Sách Sản Phẩm";
   
}
<br />
<div class="row">
    <div class=" bg-danger"><h3 style="padding-left:20px"> XIAOMI </h3></div>
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-6">
            <a href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">
                <img src=@Url.Content("~" +item.Anhbia.ToString()) class="img-responsive" alt="" width="400" height="400" />
            </a>
            <center>
                <h3><a href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">@item.Tensp</a></h3>
                <h3 style="color:red">@String.Format("{0:0,0}", @item.Giatien) VND</h3>
                <br />
                @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMasp = item.Masp, @strURL = Request.Url.ToString() }))
                {
                    <input type="submit" value="Thêm giỏ hàng" id="bgnGioHang" />

                }
            <a href="/Home/Index" title="LIENHE">
                @*<span><i class="fas fa-headphones"></i></span>*@
                <span>Quay Về</span>

            </a>
                @*<h4> <a href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">Xem chi tiết</a></h4>*@
            </center>

        </div>
    }
    

</div>


