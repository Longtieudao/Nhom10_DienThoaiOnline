
@model PagedList.IPagedList<Ictshop.Models.Sanpham>

@using PagedList.Mvc;



@{
    ViewBag.Title = "DienThoaiOnline";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<br />
<h2 class="text-center">ĐIỆN THOẠI THEO DANH MỤC</h2>
<br />
<div class="row">
    @foreach (var item in Model)
    {


        <div class="col-md-3 col-sm-6">
            <a href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">
                <img src=@Url.Content("~" +item.Anhbia.ToString()) class="img-responsive" alt="" width="400" height="400" />
            </a>
            <center>
                <h3><a href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">@item.Tensp</a></h3>
                <h3 style="color:red">Giá: @String.Format("{0:0,0}", @item.Giatien) VND</h3>
                <br />
                @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMasp = item.Masp, @strURL = Request.Url.ToString() }))
                {
                    <input type="submit" value="Thêm giỏ hàng" id="bgnGioHang" />}

                @*<h4> <a href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">Xem chi tiết</a></h4>*@
                <a href="/Home/Index" title="LIENHE">
                    @*<span><i class="fas fa-headphones"></i></span>*@
                    <span>Quay Về</span>

                </a>

            </center>

        </div>
    }



</div>


@*Tạo liên kết các trang*@
<div class="pagination">
    <span>Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</span>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
</div>


